{
  "name": "paperwork",
  "module": "server.ts",
  "scripts": {
    "generate": "drizzle-kit generate:sqlite --config=./drizzle/drizzle.config.ts",
    "push": "drizzle-kit push:sqlite --config=./drizzle/drizzle.config.ts",
    "drop": "drizzle-kit drop --config=./drizzle/drizzle.config.ts",
    "dev": "bun --watch server.ts",
    "build": "bun build server.ts",
    "start": "NODE_ENV=production bun server.ts",
    "seed": "bun run ./drizzle/seed.ts",
    "test": "bun test"
  },
  "type": "module",
  "devDependencies": {
    "@types/bun": "^1.1.8",
    "better-sqlite3": "^11.2.1",
    "drizzle-kit": "^0.24.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.1",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/html": "^1.1.0",
    "@elysiajs/jwt": "^1.1.0",
    "@elysiajs/swagger": "^1.1.1",
    "@libsql/client": "^0.10.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-typebox": "^0.1.1",
    "elysia": "^1.1.8",
    "jose": "^5.8.0",
    "postgres": "^3.4.4",
    "ulid": "^2.3.0"
  }
}